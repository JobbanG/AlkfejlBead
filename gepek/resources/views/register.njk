{% extends "master" %}

{% block content %}
<ul>
    {% for error in old('errors') %}
      <li>{{ error.message }}</li>
    {% endfor %}
  </ul>
<h2>Regisztráció</h2>

<form class="form-horizontal" method="POST">
{{ csrfField }}
  <div class="form-group">
    <label for="username" class="col-lg-2 control-label">Felhasználónév</label>
    <div class="col-lg-10">
      <input type="text" class="form-control" id="username" name="username" placeholder="Felhasználónév" value="{{old('username')}}">
    </div>
  </div>
  <div class="form-group">
    <label for="email" class="col-lg-2 control-label">Email</label>
    <div class="col-lg-10">
      <input type="text" class="form-control" id="email" name="email" placeholder="Email" value="{{old('email')}}">
    </div>
  </div>
  <div class="form-group">
    <label for="password" class="col-lg-2 control-label">Jelszó</label>
    <div class="col-lg-10">
      <input type="password" class="form-control" id="password" name="password" placeholder="Jelszó" value="">
    </div>
  </div>
  <div class="form-group">
    <label for="password2" class="col-lg-2 control-label">Jelszó megerősítése</label>
    <div class="col-lg-10">
      <input type="password" class="form-control" id="password2" name="password2" placeholder="Jelszó megerősítése" value="">
    </div>
  </div>
  <div class="form-group">
    <div class="col-lg-10 col-lg-offset-2">
      <button type="reset" class="btn btn-default">Mégsem</button>
      <button type="submit" class="btn btn-primary">Küldés</button>
    </div>
  </div>
</form>

{% endblock %}