{% extends "master" %}

{% block content %}

<h2>Új számítógép</h2>

<form class="form-horizontal" method="POST">

{{ csrfField }}

<div class="form-group has-feedback">
    <label for="name" class="col-lg-2 control-label">Gép neve</label>
    <div class="col-lg-10">
      <input required type="text" class="form-control" id="name" name="name" placeholder="Gép neve" value="{{old('name')}}">
      <span class="glyphicon form-control-feedback" aria-hidden="true"></span>
      <div class="help-block with-errors"></div>
    </div>
  </div>

  <div class="form-group has-feedback">
    <label for="instructions" class="col-lg-2 control-label">Leírás</label>
    <div class="col-lg-10">
      <textarea required class="form-control" rows="3" id="description" name="description">{{old('descriptions')}}
      </textarea>
      <span class="glyphicon form-control-feedback" aria-hidden="true"></span>
      <div class="help-block with-errors"></div>
    </div>
  </div>

<div class="form-group has-feedback">
    <label for="name" class="col-lg-2 control-label">Alaplap</label>
    <div class="col-lg-10">
      <input required type="text" class="form-control" id="motherboard" name="motherboard" placeholder="Alaplap" value="{{old('motherboard')}}">
      <span class="glyphicon form-control-feedback" aria-hidden="true"></span>
      <div class="help-block with-errors"></div>
    </div>
  </div>

  <div class="form-group has-feedback">
    <label for="name" class="col-lg-2 control-label">Processzor</label>
    <div class="col-lg-10">
      <input required type="text" class="form-control" id="processor" name="processor" placeholder="Processzor" value="{{old('processor')}}">
      <span class="glyphicon form-control-feedback" aria-hidden="true"></span>
      <div class="help-block with-errors"></div>
    </div>
  </div>

  <div class="form-group has-feedback">
    <label for="name" class="col-lg-2 control-label">Videókártya</label>
    <div class="col-lg-10">
      <input required type="text" class="form-control" id="video" name="video" placeholder="Videókártya" value="{{old('video')}}">
      <span class="glyphicon form-control-feedback" aria-hidden="true"></span>
      <div class="help-block with-errors"></div>
    </div>
  </div>

  <div class="form-group has-feedback">
    <label for="name" class="col-lg-2 control-label">Memória</label>
    <div class="col-lg-10">
      <input required type="text" class="form-control" id="memory" name="memory" placeholder="Memória" value="{{old('memory')}}">
      <span class="glyphicon form-control-feedback" aria-hidden="true"></span>
      <div class="help-block with-errors"></div>
    </div>
  </div>

  <div class="form-group">
    <div class="col-lg-10 col-lg-offset-2">
      <button type="reset" class="btn btn-default">Mégsem</button>
      <button type="submit" class="btn btn-primary">Küldés</button>
    </div>
  </div>
</form>

{% endblock %}
